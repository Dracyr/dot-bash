[user]
name = Per-Victor Persson
email = dracyr@gmail.com

[github]
  user = dracyr

[alias]
  br = branch
  cb = "!sh -c 'git branch $1 && git ch $1' -"

  ci = commit
  ch = checkout
  d = diff

  graph = log --graph
  last = log -n 10
  whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
  discard = checkout -- .

[push]
  default = current

[color]
	ui = auto

[core]
  editor = subl -n -w
  excludesfile = /Users/pvsh/.gitignore_global

[format]
  pretty = %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset
  graph = true

[help]
	autocorrect = 20

[log]
  abbrevCommit = true

[merge]
	stat = true

[mergetool]
	keepBackup = true
  
[heroku]
	account = dracyr
[credential]
	helper = cache
